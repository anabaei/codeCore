<h1>Products</h1>

 
 <% @products.each do |pp| %>
   <%= link_to pp.title, product_path(pp) %>


    <button type="button" class="btn btn-info" style="color: white important!;">
   <%= link_to 'Edit', edit_product_path(pp) %>
   </button>
   <button type="button" class="btn btn-danger" style="color: white important!;">
   <%= link_to 'Delete', product_path(pp), method: :delete %>
   </button>

  
 
   <hr />
 <% end %>